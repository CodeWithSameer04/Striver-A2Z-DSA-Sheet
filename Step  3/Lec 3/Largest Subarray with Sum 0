class Solution {
    public int maxLen(int[] arr) {
        // Your code goes here
        Map<Integer, Integer> indexMap = new HashMap<>();
        int sum = 0;
        int maxLength = 0;
        
        for(int i = 0; i < arr.length; i++){
            sum += arr[i];
            if (sum == 0){
                maxLength = i + 1;
            }
            else if(indexMap.containsKey(sum)){
                maxLength = Math.max(maxLength, i - indexMap.get(sum));
            }
            else{
                indexMap.put(sum, i);
            }
        }
        return maxLength;
    }
}

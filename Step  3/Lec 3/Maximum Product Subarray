class Solution {
    public int maxProduct(int[] arr) {
        int maxProd = arr[0];
        int minProd = arr[0];
        int ans = arr[0];

        for (int i = 1; i < arr.length; i++) {
            int num = arr[i];

            if (num < 0) {
                int temp = maxProd;
                maxProd = minProd;
                minProd = temp;
            }

            maxProd = Math.max(num, maxProd * num);
            minProd = Math.min(num, minProd * num);

            ans = Math.max(ans, maxProd);
        }
        return ans;
    }
}
class Solution {
    public boolean check(int[] nums) {
        int num = nums.length;
        int count = 0;
        for (int i = 0; i < num; i++) {
            if (nums[i] > nums[(i + 1) % num]) {
                count++;
            }
            if (count > 1) return false;
        }

        return true;
    }
}
class Solution {
    public boolean isArmstrong(int n) {
        int temp = n;
        int digits = String.valueOf(n).length();
        int sum = 0;

        while (temp > 0) {
            int rem = temp % 10;
            sum += Math.pow(rem, digits);
            temp /= 10;
        }

        return sum == n;
    }
}
